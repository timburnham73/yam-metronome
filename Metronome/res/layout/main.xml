<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/ch.reevolt.metronome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="21" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <FrameLayout
            android:id="@+id/layout_cursor_container"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="top" >

            <ImageView
                android:id="@+id/layout_cursor"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cursor" >
            </ImageView>

            <ImageView
                android:id="@+id/layout_cursor_mask"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top"
                android:background="@drawable/rectangle" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="8" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="Accents"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_first_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/note"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="60" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_second_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/note"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_third_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/note"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_fourth_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="14dp"
                    android:src="@drawable/note"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:src="@drawable/separator_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="left|center_vertical"
                    android:text="Meter"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/binary"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:src="@drawable/croche"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/ternary"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:src="@drawable/triolet"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:src="@drawable/separator_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="7.5" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="left|center_vertical"
                    android:text="Subdivision"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_sub_croche"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    android:src="@drawable/croche"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_sub_double"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    android:src="@drawable/doublec"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_sub_triolet"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:padding="3dp"
                    android:src="@drawable/triolet"
                    app:alphaValueOnDisabled="50"
                    app:alphaValueOnEnabled="80" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@drawable/separator_1" />

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="20dp" >

            <ch.reevolt.android.graphics.widget.ButtonImageView
                android:id="@+id/button_micro"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/micro"
                app:alphaValueOnDisabled="50"
                app:alphaValueOnEnabled="80" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tempo_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:textColor="#5e5e5e"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/tempo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Adagio"
                android:textColor="#5e5e5e"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="20dp" >

            <ch.reevolt.android.graphics.widget.ButtonImageView
                android:id="@+id/button_state"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/play"
                app:alphaValueOnDisabled="50"
                app:alphaValueOnEnabled="80" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:background="@drawable/bottom"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/wheel_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/wheel_background" >

            <it.sephiroth.android.wheel.view.Wheel
                android:id="@+id/wheel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>