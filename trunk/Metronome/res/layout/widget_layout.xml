<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/it.sephiroth.android.wheel.view"
	android:layout_width="match_parent" android:background="@drawable/widget_shape"
	android:layout_height="fill_parent" android:orientation="vertical" android:weightSum="2">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="16">
        
            <LinearLayout
	            android:id="@+id/minus"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4" >
		
		            <ImageView
		                android:id="@+id/button_minus"
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_margin="12dp"
		                android:src="@drawable/minus" android:layout_gravity="center"/>
       		
       		</LinearLayout>

	        <LinearLayout
	            android:id="@+id/wheel_container"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginBottom="18dp"
	            android:layout_marginTop="21dp"
	            android:layout_weight="4">
	            
	             <TextView
		            android:id="@+id/tempo_txt"
		            android:text="80"
		            android:textColor="#5e5e5e"
		            android:textSize="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center">
        		</TextView>
	            
	        </LinearLayout>
	        
	        
	         <LinearLayout
	            android:id="@+id/plus"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4" >
	
	            <ImageView
	                android:id="@+id/button_plus"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_margin="12dp"
	                android:src="@drawable/plus" android:layout_gravity="center"/>
	        </LinearLayout>
	        

	        <LinearLayout
	            android:id="@+id/plus"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4" >
	
	          <ImageView
                    android:id="@+id/button_state"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/play" >
                </ImageView>
                
	        </LinearLayout>

    </LinearLayout>
	
</LinearLayout>
