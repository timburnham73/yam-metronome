<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="21" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

		        <FrameLayout
		            android:id="@+id/layout_cursor_container"
		            android:layout_width="fill_parent"
		            android:layout_gravity="top|center_horizontal"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:gravity="top" 
		            android:layout_height="match_parent">
		
					<ImageView
						android:id="@+id/layout_cursor"
						android:layout_height="60dp"
						android:paddingTop="10dp"
						android:background="#FFF47D26" 
						android:layout_width="10dp">
					</ImageView>
					
					<ImageView
						android:id="@+id/layout_cursor_mask"
						android:layout_height="wrap_content"
						android:src="@drawable/plaque" 
						android:layout_gravity="top"
						android:layout_width="wrap_content">
					</ImageView>
		
		        </FrameLayout>
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="11">
		
		 <kankan.wheel.widget.WheelView android:id="@+id/measure_up"
            android:layout_height="80dp"
            android:layout_width="35dp"
            android:layout_gravity="center_vertical|center_horizontal"/>
         
		<kankan.wheel.widget.WheelView android:id="@+id/measure_down"
            android:layout_height="80dp"
            android:layout_width="35dp"
            android:layout_gravity="center_vertical|center_horizontal"/>
 
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3" 
        android:layout_weight="1"
        android:layout_height="68dp">



				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:gravity="left"
					android:layout_weight="1"
					android:padding="20dp">
					
								 <ch.reevolt.metronome.graphic.ButtonImageView
				                    android:id="@+id/button_micro"
				                    android:layout_width="fill_parent"
				                    android:layout_height="fill_parent"
				                    android:src="@drawable/micro" >
				                </ch.reevolt.metronome.graphic.ButtonImageView>
				                
				</LinearLayout>
			
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:gravity="center_horizontal|bottom"
					android:orientation="vertical"
					android:layout_weight="1">
							
						<TextView
				            android:id="@+id/tempo_int"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="top|center_horizontal"
				            android:text="80"
				            android:textColor="#5e5e5e"
				            android:textSize="50dp" />
		        
				        <TextView
				            android:id="@+id/tempo_txt"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="bottom|center_horizontal"
				            android:text="Adagio"
				            android:textColor="#5e5e5e"
				            android:textSize="20dp" />
				            
					</LinearLayout>
					
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:gravity="right"
					android:layout_weight="1"
					android:padding="20dp">
					
						<ch.reevolt.metronome.graphic.ButtonImageView
		                    android:id="@+id/button_state"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:src="@drawable/play" >
		                </ch.reevolt.metronome.graphic.ButtonImageView>	
					
				</LinearLayout>
       
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:background="@drawable/bottom"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/minus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/button_minus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:src="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wheel_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
   			android:layout_marginLeft="10dp"
   			android:layout_marginRight="10dp"
            android:background="@drawable/wheel_background" >

            <it.sephiroth.android.wheel.view.Wheel
                android:id="@+id/wheel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/plus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/button_plus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>