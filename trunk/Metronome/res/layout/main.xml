<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="21" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <FrameLayout
            android:id="@+id/layout_cursor_container"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="top" >

            <ImageView
                android:id="@+id/layout_cursor"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cursor" >
            </ImageView>

            <ImageView
                android:id="@+id/layout_cursor_mask"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top"
                android:background="@drawable/rectangle" >
            </ImageView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:padding="5dp" >

        <!--
          	 <kankan.wheel.widget.WheelView android:id="@+id/wheel_meter"
            android:layout_height="fill_parent"
            android:layout_width="60dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical|center_horizontal"/>
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="8" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="Accents"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_first_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_second_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_third_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_fourth_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:src="@drawable/separator_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="Meter"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_24"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/w24" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_34"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/w34" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_44"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/w44" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_38"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/w38" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_68"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/w68" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_98"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/w98" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:src="@drawable/separator_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:weightSum="8" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:text="Subdivision"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_first_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_second_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_third_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />

                <ch.reevolt.android.graphics.widget.ButtonImageView
                    android:id="@+id/button_fourth_note"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/note" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@drawable/separator_1" />

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="20dp" >

            <ch.reevolt.android.graphics.widget.ButtonImageView
                android:id="@+id/button_micro"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/micro" >
            </ch.reevolt.android.graphics.widget.ButtonImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tempo_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:text="80"
                android:textColor="#5e5e5e"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/tempo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Adagio"
                android:textColor="#5e5e5e"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="20dp" >

            <ch.reevolt.android.graphics.widget.ButtonImageView
                android:id="@+id/button_state"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/play" >
            </ch.reevolt.android.graphics.widget.ButtonImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:background="@drawable/bottom"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/minus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/button_minus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:src="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wheel_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/wheel_background" >

            <it.sephiroth.android.wheel.view.Wheel
                android:id="@+id/wheel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/plus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/button_plus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>